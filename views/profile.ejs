<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="min-h-screen bg-zinc-900 text-white w-full p-10">
        <a class=" bg-red-500 rounded-md px-2 py-1 text-sm mb-5 inline-block" href="/logout">Logout</a>
        <h3 class="text-3xl"><span class="font-light">Hello</span>, <%= user.name %>👋🏻</h3>
        <h5 class="mb-5 ">You can create a new post.</h5>
        <form action="/post" method="post">
            <textarea placeholder="Whats on your mind ?" class="p-3 outline-none w-1/3 block resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content"></textarea>
            <input type="submit" value="Create new Post" class="px-3 py-2 text-sm bg-blue-500 block rounded-md mt-2 w-40">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post w-1/3 p-4 mb-4 rounded-md bg-zinc-900 border-[1px] border-zinc-700 ">
                    <h4 class="text-blue-500 mb-2">@ <%= user.username %></h4>
                    <p class="text-sm tracking-tight"><%= post.content %></p>
                    <small class="mt-4 inline-block"><%= post.likes.length %> likes</small>
                    <div class="btns flex gap-3 mt-1">
                        <a class="text-blue-500" href="/like/<%= post._id %>">
                          <%= post.likes.indexOf(user._id)===-1 ? 'Like' : 'Unlike' %>
                        </a>
                        <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                    </div>
                </div>
                <%}) %>
            </div>
        </div>
    </div>
  </body>
</html>