<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="min-h-screen bg-zinc-900 text-white w-full p-10">
        <h3 class="text-3xl mb-5">Login Account</h3>
        <form action="/login" method="post">
            <input class="px-3 py-2 outline-none rounded-md bg-transparent border-2 border-zinc-800" type="email" name="email" placeholder="email">
            <input class="px-3 py-2 outline-none rounded-md bg-transparent border-2 border-zinc-800" type="password" name="password" placeholder="password">
            <input class="px-5 rounded-md py-2 bg-blue-500 " type="submit" value="Login Account">
        </form>
    </div>
  </body>
</html>